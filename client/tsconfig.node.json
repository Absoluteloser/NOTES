{
  "compilerOptions": {
    "composite": true,                       // Enable constraints that allow a TypeScript project to be used with project references
    "target": "ES2022",                      // Target ECMAScript 2022
    "lib": ["ES2023"],                       // Libraries to include in the build
    "module": "ESNext",                      // Use ESNext module syntax
    "skipLibCheck": true,                    // Skip type checking of declaration files

    /* Bundler mode */
    "moduleResolution": "bundler",           // Use bundler for module resolution
    "isolatedModules": true,                  // Ensure files can be safely transpiled independently
    "moduleDetection": "force",               // Force module detection

    /* Emit settings */
    "noEmit": false,                          // Prevent emitting files, only perform type checking

    /* Linting */
    "strict": true,                          // Enable all strict type checking options
    "noUnusedLocals": true,                  // Report errors on unused local variables
    "noUnusedParameters": true,               // Report errors on unused function parameters
    "noFallthroughCasesInSwitch": true       // Report errors for fallthrough cases in switch statements
  },
  "include": ["vite.config.ts"],             // Include the vite.config.ts file for compilation
  "exclude": ["node_modules"]                 // Exclude node_modules from compilation
}
